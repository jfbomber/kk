@{
    // Session["user"] ~ User object when the user is logged in
    // Session["isEdit"]  ~ Checks if the view is in edit mode
 }

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <title>@ViewBag.Title</title>
        <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
        <meta name="viewport" content="width=device-width" />
        
        @Styles.Render("~/Content/css")

        @RenderSection("Link", required: false)
       
        <style type="text/css">
            @RenderSection("Styles", required: false)
        </style>

        <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>

        <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.10.4/jquery-ui.min.js"></script>

        @RenderSection("Scripts", required: false)




        @if (Convert.ToBoolean(ViewData["IsAdmin"]))
        {
            @Scripts.Render("~/bundles/admin")
        }


        @Scripts.Render("~/bundles/modernizr")

        @Scripts.Render("~/bundles/main")

        @Scripts.Render("~/bundles/content")

        @Scripts.Render("~/bundles/login")

        <script type="text/javascript">
        	
        	window.onload = function() {
        		$(".html-escape").html(unescape($(".html-escape").html()));
        	}

            window.location.getQueryString = function (qs) { 
 	            var a = window.location.search.substring(1); 
	            var b = a.split("&");  
	            for (i = 0; i < b.length; i++) { 
     	            var c = b[i].split("=");         
                     if (c[0] == qs) {
			            return c[1];
		            }           
                 }
                 return null;
            }

        </script>
    </head>

    <body>
        <div id="content-wrapper">
            <!-- -->
            <div id="banner">
               <div id="login">@Html.Partial("_LoginPartial", null)</div>
            </div>
            <div>
                <ul id="menu">
                    <li style="width :75px;"><a href="/Home/Index">Home</a></li>
                    <li><a href="/Home/About">About</a></li>
                    <li><a href="/Home/Sponsorship">Sponsorship</a>
                    </li>
                    <li>
                    	<a href="/Home/InTheNews">In The News</a>
                    </li>
                    <li style="width :175px;">
                    	<a href="/Home/Project">Programs & Projects</a>
                    </li>
                    <li style="width :175px;">
                    	<a href="/Home/Donate">Donate</a>
	                </li>
                    <li>
                    	<a href="/Home/Blog">Blog</a>
                    </li>
                </ul>
            </div>
            <div id="content">
                @RenderBody()
            </div>
        </div>
    </body>

</html>
